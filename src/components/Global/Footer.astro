---

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container">
    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-8">
      <!-- Brand and Social -->
      <div class="flex flex-col md:flex-row items-center gap-6">
        <a href="/" class="text-2xl font-bold text-white font-serif inline-flex items-center">
          <span class="sr-only">DotNet</span>
          <img
            src="/logo.png"
            alt="Liwox"
            class="h-12 w-auto mr-2"
            style="max-height: 3rem;"
            loading="lazy"
            decoding="async"
          />
          <span>LiwoxDotNet</span>
        </a>
        <!-- Social Links -->
        <div class="flex space-x-4 mt-4 md:mt-0 flex-wrap">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-white transition-colors"
                aria-label={link.name}
              >
                <Fragment set:html={link.icon} />
              </a>
            ))
          }
        </div>
      </div>
      <!-- Footer Navigation Links -->
      <div class="flex flex-col md:flex-row gap-8 mt-8 md:mt-0">
        {
          footerNavs.map((group) => (
            <div>
              <h4 class="text-lg font-bold mb-2 text-white">{group.title}</h4>
              <ul class="space-y-1">
                {group.items.length === 0 ? (
                  <li class="text-gray-500 text-sm italic">Coming soon</li>
                ) : (
                  group.items.map((item) => (
                    <li>
                      <a 
                        href={item.href} 
                        class="text-gray-300 hover:text-primary-300 transition-colors"
                      >
                        {item.text}
                      </a>
                    </li>
                  ))
                )}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
    <!-- Copyright -->
    <div class="pt-8 mt-8 border-t border-gray-800 text-center text-gray-400 text-sm">
      <p>&copy; {currentYear} LiwoxDotNet. All rights reserved.</p>
      <p class="mt-2">
        <a href="https://liwox.net" class="hover:text-primary-300">Privacy Policy Page || </a>
        <a href="https://liwox.net" class="hover:text-primary-300">Terms of Service Page</a>
      </p>
    </div>
  </div>
</footer>