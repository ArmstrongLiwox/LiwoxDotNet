---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Sections/HeroSection.astro";
import EventList from "../components/Sections/EventList.astro";
import SermonList from "../components/Sections/SermonList.astro";
import Button from "../components/UI/Button.astro";
---

<BaseLayout>
  <HeroSection 
    title="Welcome to LiwoxDotNet"
    subtitle="Where DevOps, Forex, and Architecture Build Real Wealth."
    backgroundImage="/uploads/hero-bgd.png"
    ctaText="Explore Courses"
    ctaLink="/im-new"
    secondaryCtaText="Explore Tools"
    secondaryCtaLink="/sermons"
  />

<!-- About Section -->
<section class="py-16 bg-gray-50">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <!-- Image -->
      <div>
        <img 
          src="/images/liwox-about.jpg" 
          alt="LiwoxDotNet – Where DevOps, Forex & Architecture Meet" 
          class="rounded-lg shadow-lg object-cover w-full h-auto"
        />
      </div>

      <!-- Content -->
      <div>
        <h2 class="text-3xl md:text-4xl font-bold mb-6">About LiwoxDotNet</h2>
        
        <p class="text-gray-700 mb-6 text-lg">
          LiwoxDotNet is a knowledge hub for architects, creators, and tech-savvy professionals who want to build smarter — using code, capital, and concrete.
        </p>
        
        <p class="text-gray-700 mb-8 text-lg">
          This site brings together three powerful worlds: <strong>DevOps automation</strong>, <strong>Forex funding</strong>, and <strong>smart architecture</strong> — showing how they can work together to create real wealth and real projects.
        </p>

        <p class="text-gray-700 mb-8 text-lg">
          From automated CICD pipelines for BIM implementation, to side-income trading strategies, LiwoxDotNet delivers practical guides, free tools, and systems that help you move from idea to execution — faster and with less dependency on clients.
        </p>
        
        <a 
          href="/about" 
          class="inline-flex items-center justify-center gap-2 font-sans text-base font-medium border-2 rounded-lg 
                 transition-all duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 
                 min-h-[44px] min-w-[44px] transform hover:scale-105 active:scale-95 px-6 py-3 
                 bg-gradient-to-r from-blue-600 to-blue-700 text-white border-blue-600 
                 hover:from-blue-700 hover:to-blue-800 active:from-blue-800 active:to-blue-900 
                 focus:ring-blue-500 shadow-lg hover:shadow-xl"
        >
          Learn More About This Platform
        </a>
      </div>
    </div>
  </div>
</section>


<!-- Three Pillars Section -->
<section class="py-16 bg-white">
  <div class="container">
    <div class="max-w-5xl mx-auto text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">The Three Pillars of LiwoxDotNet</h2>
      <p class="text-xl text-gray-600">
        Where technology, finance, and design converge to build real wealth — without clients.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      <!-- Pillar 1: DevOps & Automation -->
      <div class="bg-gray-50 p-8 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
        <h3 class="text-2xl font-bold mb-4 text-primary-800 flex items-center">
          <span class="inline-block w-2 h-2 bg-blue-600 rounded-full mr-3"></span>
          DevOps & Automation
        </h3>
        <p class="text-gray-700 mb-4">
          Automate BIM workflows, CI/CD pipelines, and deployment so your firm runs itself.
        </p>
        <ul class="text-sm text-gray-600 mb-6 space-y-1">
          <li>• GitHub Actions for design updates</li>
          <li>• Dockerized rendering farms</li>
          <li>• Auto-generate client deliverables</li>
        </ul>
        <a 
          href="/category/devops" 
          class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700 transition-colors"
        >
          Learn how →
        </a>
      </div>

      <!-- Pillar 2: Forex & Funding -->
      <div class="bg-gray-50 p-8 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
        <h3 class="text-2xl font-bold mb-4 text-primary-800 flex items-center">
          <span class="inline-block w-2 h-2 bg-green-600 rounded-full mr-3"></span>
          Forex & Funding
        </h3>
        <p class="text-gray-700 mb-4">
          Use disciplined trading strategies to fund real-world architecture projects.
        </p>
        <ul class="text-sm text-gray-600 mb-6 space-y-1">
          <li>• Side income without client dependency</li>
          <li>• Risk-managed strategies for professionals</li>
          <li>• Reinvest profits into builds</li>
        </ul>
        <a 
          href="/category/forex" 
          class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700 transition-colors"
        >
          Fund your build →
        </a>
      </div>

      <!-- Pillar 3: Smart Architecture -->
      <div class="bg-gray-50 p-8 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300">
        <h3 class="text-2xl font-bold mb-4 text-primary-800 flex items-center">
          <span class="inline-block w-2 h-2 bg-purple-600 rounded-full mr-3"></span>
          Smart Architecture
        </h3>
        <p class="text-gray-700 mb-4">
          Design self-healing, energy-efficient buildings powered by IoT and automation.
        </p>
        <ul class="text-sm text-gray-600 mb-6 space-y-1">
          <li>• Sensors for structural health</li>
          <li>• Automated climate & lighting</li>
          <li>• Future-proof, adaptive designs</li>
        </ul>
        <a 
          href="/category/architecture" 
          class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700 transition-colors"
        >
          Build smarter →
        </a>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a 
        href="/guide" 
        class="inline-flex items-center justify-center gap-2 font-sans text-base font-medium border-2 rounded-lg 
               transition-all duration-300 ease-in-out min-h-[44px] px-8 py-3 
               bg-gradient-to-r from-blue-600 to-blue-700 text-white border-blue-600 
               hover:from-blue-700 hover:to-blue-800 active:from-blue-800 active:to-blue-900 
               shadow-lg hover:shadow-xl"
      >
        Get the Free Guide: "5 Ways to Fund Your Builds Without Clients"
      </a>
    </div>
  </div>
</section>



  <!-- Sermons Section -->
  <SermonList />
  
  <!-- Ministries Preview -->
  <section class="py-16 bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Ministries</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Discover how you can connect, serve, and grow through our various ministries
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Children's Ministry</h3>
          <p class="text-gray-700 mb-4">
            Nurturing the spiritual growth of our children through engaging, age-appropriate activities.
          </p>
          <a href="/ministries/childrens-ministry" class="text-primary-600 font-medium hover:text-primary-700">
            Learn More →
          </a>
        </div>
        
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-secondary-100 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Worship Ministry</h3>
          <p class="text-gray-700 mb-4">
            Leading our congregation in worship through music, song, and creative expression.
          </p>
          <a href="/ministries/worship-ministry" class="text-primary-600 font-medium hover:text-primary-700">
            Learn More →
          </a>
        </div>
        
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-accent-100 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Community Outreach</h3>
          <p class="text-gray-700 mb-4">
            Serving our local community through various programs and initiatives to share God's love.
          </p>
          <a href="/ministries/community-outreach" class="text-primary-600 font-medium hover:text-primary-700">
            Learn More →
          </a>
        </div>
      </div>
      
      <div class="mt-12 text-center">
        <Button href="/ministries" variant="outline">
          View All Ministries
        </Button>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <section 
    class="py-20 bg-cover bg-center text-white"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/uploads/thank-you-bg.webp)"
  >
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">Ready to Join Our Community?</h2>
        <p class="text-xl mb-8">
          We'd love to welcome you to our church family. Come visit us this Sunday or reach out with any questions.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <Button href="/im-new" variant="primary" size="lg">
            I'm New Here
          </Button>
          
          <Button href="/contact" variant="outline" size="lg" class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm">
            Contact Us
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>